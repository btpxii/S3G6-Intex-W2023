@{
}
@model IEnumerable<string>
<form asp-controller="Home" asp-action="BurialList" asp-route-pageNum="1" method="get">
    <select name="dage" onchange="this.form.submit()">
        <option value="">Age at Death</option>
        @foreach (string t in Model)
        {

            if (ViewBag.SelectedDage == t)
            {
                <option value="@t" selected>@t</option>
            }
            else
            {
                <option value="@t">@t</option>
            }

        }
    </select>

</form>