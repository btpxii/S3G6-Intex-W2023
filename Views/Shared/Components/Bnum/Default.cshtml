@{
}
@model IEnumerable<string>
<form asp-controller="Home" asp-action="BurialList" method="get">
    <select name="bnum" onchange="this.form.submit()">
        <option value="">Burial Number</option>
        @foreach (string t in Model)
        {
            
            if (ViewBag.SelectedBnum == t)
            {
                <option value="@t" selected>@t</option>
            }
            else
            {
                <option value="@t">@t</option>
            }
            
        }
    </select>

</form>
