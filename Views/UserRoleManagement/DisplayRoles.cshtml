@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "View Roles";
}

@await Html.PartialAsync("_TopMenuPartial")


<div class="row">
    <div class="col-6">
        <form asp-action="AddRole" method="Post">
            <div class="form-floating">
                <input type="text" id="role" name="role" class="form-control" placeholder="Role name" />
                <label>Enter role name</label>
            </div>
            <br />
            <input type="submit" value="Create" class="btn btn-outline-primary btn-block" />
            <a asp-action="Index" class="btn btn-outline-danger btn-block" style="margin-bottom: 15px;">Cancel</a>
        </form>
    </div>


    <div class="col-6" style="border-left:1px solid black;">
        <h3 class="text-center">All Roles</h3>
        @if (Model.Count == 0)
        {
            <p>No roles found!</p>
        }
        else
        {
            <table class="table">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Role Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Name</td>
                            <td>
                                <a class="btn btn-outline-danger"
                           asp-route-role="@r.Name"
                           asp-action="RemoveRole"
                                   onclick="return confirm('Are you sure to remove this role')">Remove Role</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>